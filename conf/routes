# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       UrnaEletronica.main
GET     /listCandidatos							Application.listCandidatos
GET 	/pegarCandidato/{num}					Application.pegarCandidato
GET		/liberarUrna							Terminal.liberarUrna 
GET 	/listaVotacao							UrnaEletronica.listaVotacao
POST	/insert									UrnaEletronica.enviarVoto
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
