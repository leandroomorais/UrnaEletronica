# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       UrnaEletronica.main
POST	/insert									UrnaEletronica.enviarVoto
GET 	/getTerminal							UrnaEletronica.getTerminal
POST 	/setTerminal							UrnaEletronica.setTerminal
GET		/pegarCandidato/{num}					UrnaEletronica.pegarCandidato
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
